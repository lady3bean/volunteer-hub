<h2>Login</h2>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag login_path do |f| %>
  <p>
    <%= email_field_tag :email, nil, placeholder: 'Email' %>
  </p>
  <p>
    <%= password_field_tag :password, nil,  placeholder: 'Password' %>
  </p>
  <p>
      <li><%= button_tag 'Login', class: 'login-button' %></li>
  </p>
<% end %>

<%= link_to 'Or sign up', new_user_path %>